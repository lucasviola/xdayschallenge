<p id="notice"><%= notice %></p>

<h1 class="text-center">Lista de Desafios</h1>

<div class="container">
	<div class="row">

                <% @subjects.each do |subject|%>
                <div class="col-md-4 text-center">
                    <div class="box">
                        <div class="box-content">
                            <h1 class="tag-title"><%= subject.name %></h1>
                            <hr />
                            <p class="lead"><%= subject.description %></p>
                            <br />
                            <h3 class="tag-title">Days of Challenge: <%= subject.timelapse %></h3>
                            <a href="#" class="btn btn-block btn-primary">Learn more</a>
                        </div>
                    </div>
                </div>
                <% end %>

        </div>
	</div>
</div>
